    <!-- Add your project-specific suppressions below this line -->

    <!-- Suppress H2 database vulnerabilities - only used in tests -->
    <suppress>
        <notes><![CDATA[
            H2 database is only used for testing, not in production.
            CVE applies to remote connections which are disabled in our test configuration.
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.h2database/h2@.*$</packageUrl>
        <cve>CVE-2022-45868</cve>
        <filePath regex="true">.*/target/test-classes/.*</filePath>
    </suppress>

    <!-- Suppress commons-configuration vulnerabilities - false positives -->
    <suppress>
        <notes><![CDATA[
            CVE-2025-46392 in commons-configuration@1.10: Uncontrolled Resource Consumption.
            This vulnerability doesn't affect our usage pattern of Commons Configuration.
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/commons-configuration/commons-configuration@.*$</packageUrl>
        <cve>CVE-2025-46392</cve>
    </suppress>

    <!-- Suppress commons-jxpath vulnerabilities - false positives -->
    <suppress>
        <notes><![CDATA[
            CVE-2022-40159, CVE-2022-40160 in commons-jxpath@1.3: Out-of-bounds Write vulnerabilities.
            These vulnerabilities don't affect our usage pattern of JXPath for basic XPath queries.
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/commons-jxpath/commons-jxpath@.*$</packageUrl>
        <cve>CVE-2022-40159</cve>
        <cve>CVE-2022-40160</cve>
    </suppress>



